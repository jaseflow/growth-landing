.menu
    background: $darkBlue
    color: #fff
    box-shadow: inset 5px 0 10px rgba(0,0,0,0.3)
    transition: all 0.25s ease
    transform: translateZ(0)
    -webkit-will-change: transform

.menu__hd
    background-color: rgba(0,0,0,0.2)
    height: 70px
    padding: 0 24px
    .menu__link
        height: 70px

.menu__group
    margin-bottom: 24px
    border-top: 1px solid rgba(255,255,255,0.1)
    padding-top: 24px
    &:first-child
        border-top: 0
        padding-top: 0

.menu__owner
    justify-content: space-between
    text-decoration: none
    color: #fff
    font-weight: bold
    font-size: 16px
    &:hover
        color: inherit

.menu__body
    padding: 0 24px

.menu__list li
    margin: 0

.menu__title
    font-size: 12px
    text-transform: uppercase
    color: rgba(255,255,255,0.3)
    position: relative

.menu__count
    display: block
    height: 24px
    width: 24px
    line-height: 24px
    text-align: center
    border-radius: 4px
    position: absolute
    top: 0
    right: 0
    background-color: rgba(255,255,255,0.1)

.menu__link
    padding: 12px
    padding-left: 18px
    margin: 0 -24px
    display: flex
    align-items: center
    justify-content: space-between
    border-radius: 0 4px 4px 0
    color: rgba(255,255,255,0.7)
    text-decoration: none
    font-size: 14px
    transition: border 0.25s ease
    border-left: 6px solid transparent
    span
        opacity: 0
        transition: all 0.1s ease
        transition-delay: 0.1s
    &:hover
        color: #fff
        background-color: rgba(0,0,0,0.05)
        border-left-color: $green

.menu__icon
    width: 40px
    height: 40px
    line-height: 40px
    text-align: center
    color: #fff
    font-size: 18px

@media(min-width: 1024px)
    .menu--active
    .menu:hover
        box-shadow: 5px 0 10px rgba(0,0,0,0.4)
        transform: translateX(240px);
        .menu__link span
            opacity: 1
