.module
    display: flex
    align-items: center
    justify-content: space-between
    padding: 24px
    color: #555
    border-top: 1px solid #ddd
    &:first-child
        .module__content
            opacity: 1

.module__title
    font-size: 15px
    margin-bottom: 6px

.module__code
    font-size: 12px
    color: #999

.module__progress
    flex-basis: 120px

.module__content
    opacity: 0.4
