<div class="course">
    <div class="course__hd">
        <div>
            <h3 class="course__title">{{ profile.course.title }}</h3>
            <h4 class="course__meta">
                <span>{{ profile.course.level }} {{ profile.course.code }}</span>
                <span>Assigned: 3 March 2015</span>
                <span>Expires: 3 March 2018</span>
            </h4>
        </div>
        <i class="fa fa-chevron-down course__arrow"></i>
    </div>
    <div class="course__body">
        <div class="modules">
            {{#each profile.modules }}
            <div class="module">
                <div class="module__content">
                    <h4 class="module__title">{{title}}</h4>
                    <small class="module__code">{{code}}</small>
                </div>
                <div class="module__progress">
                    <div class="progress">
                        <div class="progress__bar" style="-webkit-transform: translateX({{progress}}%)"></div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
