<form method="post" action="/admin/add" class="form u-centered">
    <div class="form__group">
        <h4>Details</h4>
        <input type="text" name="firstName" class="u-full-width" placeholder="First name">
    </div>
    <div class="form__group">
        <input type="text" name="lastName" class="u-full-width" placeholder="Last name">
    </div>
    <div class="form__group">
        <input type="email" name="email" class="u-full-width" placeholder="Email address">
    </div>
    <div class="form__group">
        <h4>Enrol (optional)</h4>
        <select id="" name="course">
                <option value="">Please select a course</option>
            {{#each courses}}
                <option value="{{ code }}">{{ title }}</option>
            {{/each}}
        </select>
    </div>
    <input class="btn" type="submit" value="Register">
</form>
